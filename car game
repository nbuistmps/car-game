run = "help"
start = "start"
stop = "stop"
quit = "quit"

begin = (input(">:"))

while begin.lower() == run:
    print (""" Start - starts your car
Stop - stops your car
Quit - quits the game""")
    begin = input(">:")
    break
while begin.lower() == start:
    print ("Your car has started")
    begin = input(">:")
    break
while begin.lower() == stop:
    print ('Your car has stopped')
    begin = input('>:')
    break
while begin.lower() == quit:
    break
